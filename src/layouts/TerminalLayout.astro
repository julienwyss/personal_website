---
import TerminalWindow from "../components/TerminalWindow.astro";
const { title = "terminal@portfolio" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-900 text-zinc-100 font-mono min-h-screen flex items-center justify-center">
    <main class="w-full max-w-5xl p-4">
      <TerminalWindow>
        <slot />
      </TerminalWindow>
    </main>
  </body>
</html>

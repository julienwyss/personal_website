---
const { title, appId } = Astro.props;
---

<div
  class="app-window absolute bg-zinc-900 border border-zinc-700 rounded-md shadow-lg overflow-hidden"
  data-app={appId}
  style="width: 600px; height: 400px;"
>
  <div
    class="title-bar flex items-center justify-between bg-zinc-800 px-3 py-2 text-xs text-zinc-400 select-none cursor-move"
  >
    <span class="font-bold text-zinc-300">{title}</span>

    <div class="flex items-center gap-2">
      <button
        id="btn-minimize"
        class="group flex items-center justify-center w-4 h-4 rounded-full border-2 border-zinc-950 hover:border-zinc-700 transition-colors cursor-pointer"
        aria-label="minimize"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-2 h-2 text-zinc-500 opacity-0 group-hover:opacity-100 transition-opacity"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="4"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
      </button>

      <button
        id="btn-maximize"
        class="group flex items-center justify-center w-4 h-4 rounded-full border-2 border-zinc-950 hover:border-zinc-700 transition-colors cursor-pointer"
        aria-label="maximize"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-2 h-2 text-zinc-500 opacity-0 group-hover:opacity-100 transition-opacity"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="4"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
        </svg>
      </button>

      <button
        id="btn-close"
        class="group flex items-center justify-center w-4 h-4 rounded-full bg-blue-600 hover:bg-blue-500 transition-colors cursor-pointer"
        aria-label="close"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-2.5 h-2.5 text-zinc-900 group-hover:text-white transition-colors"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="4"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>

  <div class="app-content">
    <slot />
  </div>

  <div
    class="resize-handle resize-r absolute right-0 top-0 bottom-0 w-1 cursor-ew-resize"
  >
  </div>
  <div
    class="resize-handle resize-b absolute left-0 bottom-0 right-0 h-1 cursor-ns-resize"
  >
  </div>
  <div
    class="resize-handle resize-rb absolute right-0 bottom-0 w-3 h-3 cursor-nwse-resize"
  >
  </div>
  <div
    class="resize-handle resize-l absolute left-0 top-0 bottom-0 w-1 cursor-ew-resize"
  >
  </div>
  <div
    class="resize-handle resize-t absolute left-0 top-0 right-0 h-1 cursor-ns-resize"
  >
  </div>
  <div
    class="resize-handle resize-rt absolute right-0 top-0 w-3 h-3 cursor-nesw-resize"
  >
  </div>
  <div
    class="resize-handle resize-lb absolute left-0 bottom-0 w-3 h-3 cursor-nesw-resize"
  >
  </div>
  <div
    class="resize-handle resize-lt absolute left-0 top-0 w-3 h-3 cursor-nwse-resize"
  >
  </div>
</div>

---
import ToolTips from "../utils/ToolTips.astro";
---

<div
  class="absolute left-0 top-0 h-full w-14 bg-zinc-800 border-l border-zinc-700 flex flex-col items-center py-4 gap-4"
>
  <button
    data-tooltip-target="tooltip-profile-picture"
    data-tooltip-placement="right"
    class="w-10 h-10 rounded-md bg-zinc-700 hover:bg-zinc-600 text-zinc-200 flex items-center justify-center"
  >
    <img
      src={`${import.meta.env.BASE_URL}ProfilePicture.jpg`}
      alt="Profile Picture"
      class="w-full h-full object-cover rounded-md"
    />
  </button>
  <button
    data-tooltip-target="tooltip-terminal"
    data-tooltip-placement="right"
    type="button"
    class="w-10 h-10 rounded-md bg-zinc-700 hover:bg-zinc-600 text-zinc-200 flex items-center justify-center cursor-pointer font-black text-xl"
    onclick="window.openApp('terminal')"
  >
    <span class="text-red-500">></span><span class="text-white">_</span>
  </button>

  <button
    data-tooltip-target="tooltip-linkedin"
    data-tooltip-placement="right"
    type="button"
    class="w-10 h-10 rounded-md bg-zinc-700 hover:bg-zinc-600 text-zinc-200 flex items-center justify-center cursor-pointer"
    onclick="window.openApp('linkedin')"
  >
    <img
      src={`${import.meta.env.BASE_URL}linkedin-logo-white.png`}
      alt="LinkedIn Logo"
      class="w-full h-full object-cover rounded-md"
    />
  </button>

  <button
    data-tooltip-target="tooltip-github"
    data-tooltip-placement="right"
    type="button"
    class="w-10 h-10 rounded-md bg-zinc-700 hover:bg-zinc-600 text-zinc-200 flex items-center justify-center cursor-pointer"
    onclick="window.openApp('github')"
  >
    <img
      src={`${import.meta.env.BASE_URL}github-logo-inverted.svg`}
      alt="GitHub Logo"
      class="w-full h-full object-cover rounded-md"
    />
  </button>

  <button
    data-tooltip-target="tooltip-contact"
    data-tooltip-placement="right"
    type="button"
    class="w-10 h-10 rounded-md bg-zinc-700 hover:bg-zinc-600 text-zinc-200 flex items-center justify-center cursor-pointer"
    onclick="window.openApp('contact')"
  >
    Cont
  </button>

  <button
    data-tooltip-target="tooltip-writeups"
    data-tooltip-placement="right"
    type="button"
    class="w-10 h-10 rounded-md bg-zinc-700 hover:bg-zinc-600 text-zinc-200 flex items-center justify-center cursor-pointer transition-colors"
    onclick="window.openApp('explorer')"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="22"
      height="22"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><path
        d="M4 20h16a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.93a2 2 0 0 1-1.66-.9l-.82-1.2A2 2 0 0 0 7.93 2H4a2 2 0 0 0-2 2v13c0 1.1.9 2 2 2Z"
      ></path></svg
    >
  </button>
  <div
    id="tooltip-writeups"
    role="tooltip"
    class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip"
  >
    CTF Writeups
    <div class="tooltip-arrow" data-popper-arrow></div>
  </div>

  <ToolTips />
</div>

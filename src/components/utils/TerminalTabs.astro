---
const tabs = [
  { id: "home", label: "home" },
  { id: "skills", label: "skills" },
];
---

<div class="flex items-center border-b border-zinc-700 bg-zinc-800">
  <div class="flex gap-1 px-3 pt-2">
    {
      tabs.map((tab, index) => (
        <button
          data-tab={tab.id}
          class={`tab-button px-4 py-2 text-sm rounded-t-md border transition-colors cursor-pointer
          ${
            index === 0
              ? "bg-zinc-900 border-zinc-700 text-zinc-100 tab-active"
              : "bg-zinc-800 border-transparent text-zinc-400 hover:text-zinc-200"
          }`}
        >
          {tab.label}
        </button>
      ))
    }
  </div>
</div>

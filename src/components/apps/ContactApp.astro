<div class="contact-terminal h-full bg-zinc-900 text-zinc-300 font-mono text-sm p-4 overflow-y-auto cursor-text">
  <input
    type="text"
    class="contact-honeypot"
    name="website"
    tabindex="-1"
    autocomplete="off"
    style="position:absolute;left:-9999px;width:1px;height:1px;opacity:0;"
  />
  <div class="contact-history flex flex-col gap-1">
    <div class="contact-active-line flex items-baseline gap-2 h-5 hidden">
      <span class="text-cyan-400 leading-none h-5 flex items-center">?</span>
      <span class="contact-prompt font-bold text-zinc-100 leading-none h-5 flex items-center">Name:</span>
      
      <input 
        type="text" 
        class="contact-input bg-transparent border-none outline-none text-zinc-300 w-full p-0 m-0 focus:ring-0 flex-1 leading-none h-5" 
        autocomplete="off"
        style="line-height: 1.25rem; vertical-align: baseline;"
      />
    </div>
  </div>
</div>